Q = input("are a beginer? ")
if Q.lower() == "yes":
    print("if you want to specify the data type of a variable ")
    answer5 = input("what you should use to get 3.0 (str(3) or int(3) or float(3)? ) ")
    if answer5.lower() == "float(3)":
        print('Correct!')
        score += 1
    else:
        print("Incorrect!")
    print('import datetime - x = datetime.datetime.now() - print(x.strftime("%A"))')   
    answer6 = input('what is the result ? (year or month or day) ')
    if answer6.lower() == "day":
        print('Correct!')
        score += 1
    else:
        print("Incorrect!")
    print ("A while loop in Python is used for what type of iteration?")
    answer7 = input("definite or indefinite or indeterminate ")
    if answer7.lower() == "indefinite":
        print('Correct!')
        score += 1
    else:
        print("Incorrect!")
    print("Which of the following statements assigns the value 100 to the variable x in Python:")
    answer8 = input("x << 100 or x := 100 or x = 100 ")
    if answer8.lower() == "x = 100":
        print('Correct!')
        score += 1
    else:
        print("Incorrect!")

    print("You got " + str(score) + " questions correct!")
    print("You got " + str((score / 4) * 100) + "%.")
    if score == 3 or score == 4:
        x = input("you want try level 2? ")
        if x.lower() == "yes":
            my_function()
    elif score == 0 or score == 1:
        print("study harder and try again") 
    elif score == 2:
        print("not bad! study harder and you will be better")
if Q.lower() == "no" or "non":
    my_function()
